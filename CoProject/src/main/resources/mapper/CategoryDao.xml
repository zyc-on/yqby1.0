<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.coproject.dao.CategoryDao">

    <resultMap type="com.example.coproject.entity.Category" id="CategoryMap">
        <result property="categoryid" column="categoryid" jdbcType="INTEGER"/>
        <result property="categoryname" column="categoryname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CategoryMap">
        select
          categoryid, categoryname
        from coproject.category
        where categoryid = #{categoryid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CategoryMap">
        select
          categoryid, categoryname
        from coproject.category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CategoryMap">
        select
          categoryid, categoryname
        from coproject.category
        <where>
            <if test="categoryid != null">
                and categoryid = #{categoryid}
            </if>
            <if test="categoryname != null and categoryname != ''">
                and categoryname = #{categoryname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="categoryid" useGeneratedKeys="true">
        insert into coproject.category(categoryname)
        values (#{categoryname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update coproject.category
        <set>
            <if test="categoryname != null and categoryname != ''">
                categoryname = #{categoryname},
            </if>
        </set>
        where categoryid = #{categoryid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from coproject.category where categoryid = #{categoryid}
    </delete>

</mapper>