<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.coproject.dao.UserDao">

    <resultMap type="com.example.coproject.entity.User" id="UserMap">
        <result property="account" column="account" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="school" column="school" jdbcType="VARCHAR"/>
        <result property="location" column="location" jdbcType="VARCHAR"/>
        <result property="motto" column="motto" jdbcType="VARCHAR"/>
        <result property="userid" column="userid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          account, password, username, sex, avatar, school, location, motto, userid
        from coproject.user
        where userid = #{userid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          account, password, username, sex, avatar, school, location, motto, userid
        from coproject.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          account, password, username, sex, avatar, school, location, motto, userid
        from coproject.user
        <where>
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="sex != null">
                and sex = #{sex}
            </if>
            <if test="avatar != null and avatar != ''">
                and avatar = #{avatar}
            </if>
            <if test="school != null and school != ''">
                and school = #{school}
            </if>
            <if test="location != null and location != ''">
                and location = #{location}
            </if>
            <if test="motto != null and motto != ''">
                and motto = #{motto}
            </if>
            <if test="userid != null">
                and userid = #{userid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userid" useGeneratedKeys="true">
        insert into coproject.user(password, username, sex)
        values (#{password}, #{username}, #{sex})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update coproject.user
        <set>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
        </set>
        where userid = #{userid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from coproject.user where userid = #{userid}
    </delete>

</mapper>